{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "client",
  "projects": {
    "creator": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "inlineStyle": true,
          "style": "scss"
        }
      },
      "root": "client/creator",
      "sourceRoot": "client/creator/src",
      "prefix": "prc",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/creator",
            "index": "client/creator/src/index.html",
            "main": "client/creator/src/main.ts",
            "polyfills": "client/creator/src/polyfills.ts",
            "tsConfig": "client/creator/tsconfig.app.json",
            "aot": false,
            "assets": [
              "client/creator/src/favicon.ico",
              "client/creator/src/assets"
            ],
            "styles": [
              "client/creator/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "client/creator/src/environments/environment.ts",
                  "with": "client/creator/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "creator:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "creator:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "creator:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "client/creator/src/test.ts",
            "polyfills": "client/creator/src/polyfills.ts",
            "tsConfig": "client/creator/tsconfig.spec.json",
            "karmaConfig": "client/creator/karma.conf.js",
            "assets": [
              "client/creator/src/favicon.ico",
              "client/creator/src/assets"
            ],
            "styles": [
              "client/creator/src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "client/creator/tsconfig.app.json",
              "client/creator/tsconfig.spec.json",
              "client/creator/e2e/tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "client/creator/e2e/protractor.conf.js",
            "devServerTarget": "creator:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "creator:serve:production"
            }
          }
        }
      }
    },
    "nebula": {
      "projectType": "library",
      "root": "client/nebula",
      "sourceRoot": "client/nebula/src",
      "prefix": "prn",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "client/nebula/tsconfig.lib.json",
            "project": "client/nebula/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "client/nebula/src/test.ts",
            "tsConfig": "client/nebula/tsconfig.spec.json",
            "karmaConfig": "client/nebula/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "client/nebula/tsconfig.lib.json",
              "client/nebula/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }},
  "defaultProject": "creator"
}
